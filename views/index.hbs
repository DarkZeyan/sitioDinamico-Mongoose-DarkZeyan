{{>header}}
{{>navbar}}
<div class="container">
    {{#if pintores}}
        <table class="table table-bordered table-hover table-dark" style="margin-bottom: 6rem">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Corriente</th>
                    <th scope="col">Nacionalidad</th>
                    <th scope="col">Imagen</th>
                    <th scope="col">Biografía y Obras</th>
                    <th scope="col">Fecha de Nacimiento</th>
                    <th scope="col">Fecha de Muerte</th>
                </tr>
            </thead>
            <tbody>
                {{#each pintores}}
                    <tr>
                        <td>{{_id}}</td>
                        <td>{{nombre}}</td>
                        <td>{{corriente}}</td>
                        <td>{{nacionalidad}}</td>
                        <td><img src="/images/{{pintura}}"></td>
                        <td><a href="{{biografia}}">Acceder a biografía de {{nombre}}</a></td>
                        <td>{{nacimiento}}</td>
                        <td>{{fallecimiento}}</td>
                    </tr>
                {{/each}}
            </tbody>
        </table>
    {{else}}
        <p>No se encuentran pintores</p>
    {{/if}}
</div>
{{>footer}}